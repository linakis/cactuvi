<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Storage permissions for downloads to public Downloads folder -->
    <!-- For API 26-28 (legacy storage) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <application
        android:name=".Cactuvi"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IPTVPlayer"
        android:usesCleartextTraffic="true"
        android:largeHeap="true"
        tools:targetApi="31">

        <!-- LoadingActivity - First launch handler -->
        <activity
            android:name=".ui.LoadingActivity"
            android:exported="true"
            android:theme="@style/Theme.IPTVPlayer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity - Routing activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.home.HomeActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.player.PlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.live.LiveTvActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.movies.MoviesActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.series.SeriesActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.continuewatching.ContinueWatchingActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.mylist.MyListActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.detail.MovieDetailActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.detail.SeriesDetailActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.search.SearchActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.downloads.DownloadsActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.settings.MoviesFilterSettingsActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.settings.SeriesFilterSettingsActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.settings.LiveTvFilterSettingsActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.settings.ManageFoldersActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.settings.ManageSourcesActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <activity
            android:name=".ui.settings.AddEditSourceActivity"
            android:theme="@style/Theme.IPTVPlayer" />

        <!-- Download Service -->
        <service
            android:name=".services.DownloadService"
            android:exported="false"
            android:foregroundServiceType="dataSync">
            <intent-filter>
                <action android:name="androidx.media3.exoplayer.downloadService.action.RESTART"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </service>

        <!-- Disable default WorkManager initialization to use Hilt worker factory -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

    </application>

</manifest>
