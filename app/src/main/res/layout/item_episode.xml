<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/episode_item_height"
    android:orientation="horizontal"
    android:background="@color/background_primary"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/spacing_l"
    android:paddingEnd="@dimen/spacing_l"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Episode Number with Progress Indicator -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/episodeNumber"
            style="@style/TextAppearance.App.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/brand_green"
            tools:text="1" />

        <!-- Progress Indicator (shows if episode has watch history) -->
        <View
            android:id="@+id/progressIndicator"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_circle"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <!-- Episode Title -->
    <TextView
        android:id="@+id/episodeTitle"
        style="@style/TextAppearance.App.Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="The Beginning of the End" />

    <!-- Duration -->
    <TextView
        android:id="@+id/episodeDuration"
        style="@style/TextAppearance.App.Body"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/text_tertiary"
        tools:text="45 min" />

    <!-- Download Button -->
    <ImageButton
        android:id="@+id/downloadButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="@dimen/spacing_s"
        android:src="@drawable/ic_download"
        android:contentDescription="@string/download"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        app:tint="@color/text_tertiary"
        android:focusable="true" />

</LinearLayout>
