<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/season_header_height"
    android:orientation="horizontal"
    android:background="@color/background_secondary"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/spacing_l"
    android:paddingEnd="@dimen/spacing_l"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/seasonText"
        style="@style/TextAppearance.App.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        tools:text="Season 1 (10 episodes)" />

    <ImageView
        android:id="@+id/expandIcon"
        android:layout_width="@dimen/icon_size_medium"
        android:layout_height="@dimen/icon_size_medium"
        android:src="@drawable/ic_expand_more"
        android:contentDescription="@string/expand"
        app:tint="@color/text_secondary" />

</LinearLayout>
