<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.iptv.app.ui.common.ModernToolbar
        android:id="@+id/modernToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/settings"
        app:showActionButton="false"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/modernToolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_l">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRIVACY &amp; SECURITY"
                android:textColor="@color/brand_orange"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_s"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/vpnWarningCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Warn when VPN is not connected"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="Show a warning dialog when streaming without VPN"
                            android:textColor="@color/text_tertiary"
                            android:textSize="14sp" />
                    </LinearLayout>
                    
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/vpnWarningSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_m"
                        android:checked="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cache_management"
                android:textColor="@color/brand_orange"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/clearCacheCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_cache"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Remove all cached data"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SOURCES"
                android:textColor="@color/brand_orange"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/manageSourcesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Sources"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Add, edit, or switch between IPTV sources"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy"
                android:textColor="@color/brand_orange"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/clearHistoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_watch_history"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Remove all watch progress"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTENT FILTERS"
                android:textColor="@color/brand_orange"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/moviesFilterCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Movies Filters"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Customize grouping and visibility"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/seriesFilterCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Series Filters"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Customize grouping and visibility"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/liveTvFilterCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Live TV Filters"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Customize grouping and visibility"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Sync Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Background Sync"
                android:textColor="@color/brand_orange"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/syncNowCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sync Now"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:id="@+id/lastSyncText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Last synced: Never"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/syncSettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <!-- Sync Enabled Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Enable Background Sync"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium" />
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="Automatically refresh content in background"
                                android:textColor="@color/text_tertiary"
                                android:textSize="14sp" />
                        </LinearLayout>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/syncEnabledSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_m"
                            android:checked="true" />
                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/spacing_m"
                        android:background="@color/divider" />
                    
                    <!-- WiFi Only Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="WiFi Only"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium" />
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="Sync only when connected to WiFi"
                                android:textColor="@color/text_tertiary"
                                android:textSize="14sp" />
                        </LinearLayout>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/wifiOnlySwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_m"
                            android:checked="true" />
                    </LinearLayout>
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/spacing_m"
                        android:background="@color/divider" />
                    
                    <!-- Sync Interval -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sync Interval"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="@dimen/spacing_s" />
                    
                    <RadioGroup
                        android:id="@+id/syncIntervalGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <RadioButton
                            android:id="@+id/interval6h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Every 6 hours"
                            android:textColor="@color/text_secondary"
                            android:checked="true" />
                        
                        <RadioButton
                            android:id="@+id/interval12h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Every 12 hours"
                            android:textColor="@color/text_secondary" />
                        
                        <RadioButton
                            android:id="@+id/interval24h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Every 24 hours"
                            android:textColor="@color/text_secondary" />
                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textColor="@color/brand_orange"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_version"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="1.0.0"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
