<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <com.cactuvi.app.ui.common.ModernToolbar
        android:id="@+id/modernToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showActionButton="false"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/modernToolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_l">
            
            <!-- Grouping Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GROUPING"
                android:textColor="@color/brand_green"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_s"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Enable Grouping"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium" />
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="Organize content into folders"
                                android:textColor="@color/text_tertiary"
                                android:textSize="14sp" />
                        </LinearLayout>
                        
                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/groupingSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Separator Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEPARATOR"
                android:textColor="@color/brand_green"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Group Separator Character"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="Character used to split folder names"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                    
                    <Spinner
                        android:id="@+id/separatorSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/spacing_m"
                        android:background="@android:drawable/btn_dropdown"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Folder Filtering Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOLDER FILTERING"
                android:textColor="@color/brand_green"
                android:textSize="14sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_l"
                android:layout_marginBottom="@dimen/spacing_m" />
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/manageFoldersCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/background_secondary"
                app:cardCornerRadius="@dimen/corner_radius_medium"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Visible Folders"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />
                    
                    <TextView
                        android:id="@+id/folderFilterStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="All folders visible"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
