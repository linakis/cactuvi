<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Modern Toolbar -->
    <com.iptv.app.ui.common.ModernToolbar
        android:id="@+id/modernToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/downloads"
        app:showActionButton="false"
        app:layout_constraintTop_toTopOf="parent" />
    
    <!-- Clear All Button -->
    <TextView
        android:id="@+id/clearAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_all"
        android:textColor="@color/brand_orange"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="@dimen/spacing_l"
        android:paddingVertical="@dimen/spacing_m"
        android:background="?attr/selectableItemBackground"
        android:layout_marginEnd="@dimen/spacing_s"
        app:layout_constraintEnd_toEndOf="@id/modernToolbar"
        app:layout_constraintTop_toTopOf="@id/modernToolbar"
        app:layout_constraintBottom_toBottomOf="@id/modernToolbar" />

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:tabIndicatorColor="@color/brand_orange"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="@color/brand_orange"
        app:tabTextColor="@color/text_secondary"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:layout_constraintTop_toBottomOf="@id/modernToolbar" />

    <!-- ViewPager2 for tabs -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
