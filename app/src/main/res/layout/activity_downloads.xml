<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Modern Toolbar -->
    <com.iptv.app.ui.common.ModernToolbar
        android:id="@+id/modernToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/downloads"
        app:showActionButton="false"
        app:layout_constraintTop_toTopOf="parent" />
    
    <!-- Clear All Button -->
    <TextView
        android:id="@+id/clearAllButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All"
        android:textColor="@color/brand_orange"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="@dimen/spacing_l"
        android:paddingVertical="@dimen/spacing_m"
        android:background="?attr/selectableItemBackground"
        android:layout_marginEnd="@dimen/spacing_s"
        app:layout_constraintEnd_toEndOf="@id/modernToolbar"
        app:layout_constraintTop_toTopOf="@id/modernToolbar"
        app:layout_constraintBottom_toBottomOf="@id/modernToolbar" />

    <!-- Downloads RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/spacing_m"
        android:paddingTop="@dimen/spacing_l"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/modernToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_download"
        tools:visibility="visible" />

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/brand_orange"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/modernToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/modernToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/emptyIcon"
            android:layout_width="@dimen/empty_state_icon_size"
            android:layout_height="@dimen/empty_state_icon_size"
            android:src="@drawable/ic_download"
            android:alpha="0.3"
            android:contentDescription="@string/no_downloads"
            app:tint="@color/text_tertiary" />

        <TextView
            android:id="@+id/emptyText"
            style="@style/TextAppearance.App.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_downloads"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="@dimen/spacing_l" />

        <TextView
            style="@style/TextAppearance.App.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_downloading"
            android:textColor="@color/text_tertiary"
            android:layout_marginTop="@dimen/spacing_s" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
